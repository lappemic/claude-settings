{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Bash(npx prettier:*)",
      "Bash(npm run:*)",
      "Bash(npx eslint:*)",
      "Bash(ls:*)",
      "Bash(git checkout:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(pbcopy)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(echo:*)",
      "Skill(frontend-design)",
      "Skill(frontend-design:frontend-design)",
      "Bash(git diff:*)",
      "Read(~/Downloads/*)",
      "Read(/Users/mi/Downloads/*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f package.json ] && grep -q '\"typecheck\"' package.json 2>/dev/null; then npm run typecheck --silent 2>/dev/null || true; fi"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint --fix \"$CLAUDE_TOOL_ARG_file_path\" 2>/dev/null || true",
            "statusMessage": "Running linter..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\"'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "feature-dev@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": false
}
